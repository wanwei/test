<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="beforeAdvice" class="com.esen.spring.sample.aop.BeforeAdvice"></bean>
	<bean id="afterAdvice" class="com.esen.spring.sample.aop.AfterAdvice"></bean>
	<bean id="compareInterceptor" class="com.esen.spring.sample.aop.CompareInterceptor"></bean>
	<bean id="studenttarget" class="com.esen.spring.sample.aop.StudentImpl"></bean>
	<bean id="student" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="proxyInterfaces">
			<value>com.esen.spring.sample.aop.IStudent</value>
		</property>
		<property name="interceptorNames">
			<list>
				<value>beforeAdvice</value>
				<value>afterAdvice</value>
				<value>compareInterceptor</value>  
			</list>
		</property>
		<property name="target">
			<ref bean="studenttarget"/>
		</property>
	</bean>
</beans>